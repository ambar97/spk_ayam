<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/cok"
                android:layout_gravity="center_horizontal"
                android:textSize="24sp"
                android:gravity="bottom"
                android:textColor="@color/colorPrimaryDark"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:background="@drawable/border"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/diagnosa"
                        android:onClick="infodiagnosa"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:src="@drawable/diagnosa"
                        android:tint="@color/btn"
                        tools:ignore="OnClick"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:layout_marginTop="15dp"
                        android:text="DIAGNOSA"
                        android:background="@color/colorAqua"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/blck"
                        />

                </LinearLayout>


            </LinearLayout>

            <!-- Second Row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/info"
                        android:onClick="infosakits"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:src="@drawable/info"
                        android:tint="@color/btn"
                        tools:ignore="OnClick" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:layout_marginTop="15dp"
                        android:text="INFO PENYAKIT"
                        android:background="@color/colorAqua"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/blck"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/bantuan"
                        android:onClick="bantuaninfo"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:src="@drawable/bantuan"
                        android:tint="@color/btn"
                        tools:ignore="OnClick" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:layout_marginTop="15dp"
                        android:text="BANTUAN"
                        android:background="@color/colorAqua"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/blck"
                        />

                </LinearLayout>


            </LinearLayout>
            <!-- End Second Row-->
            <!-- Third Row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:background="@drawable/border"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/tentang"
                        android:onClick="infotentang"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/tentang"
                        android:tint="@color/btn"
                        tools:ignore="OnClick" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:layout_marginTop="15dp"
                        android:text="TENTANG"
                        android:textStyle="bold"
                        android:background="@color/colorAqua"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/blck"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="125dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:background="@drawable/border"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="35dp"
                        android:layout_gravity="center"
                        android:onClick="exitclikkk"
                        android:src="@drawable/keluar"
                        android:tint="@color/btn"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:layout_marginTop="15dp"
                        android:text="KELUAR"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:background="@color/colorAqua"
                        android:gravity="center"
                        android:textColor="@color/blck"
                        />

                </LinearLayout>


            </LinearLayout>
            <!-- End Third Row-->

        </LinearLayout>

    </ScrollView>


</LinearLayout>